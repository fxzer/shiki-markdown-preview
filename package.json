{
  "publisher": "fxzer",
  "name": "shiki-markdown-preview",
  "displayName": "Shiki Markdown Preview",
  "version": "1.0.5",
  "private": true,
  "description": "一个功能强大的 VS Code 扩展，提供基于 Shiki 的 Markdown 预览功能，支持 60+ 种语法高亮主题。",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/index.js",
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onWebviewPanel:shikiMarkdownPreview"
  ],
  "contributes": {
    "commands": [
      {
        "command": "shikiMarkdownPreview.openPreviewSlide",
        "title": "Open Markdown Preview Slide",
        "category": "Shiki Markdown Preview",
        "icon": {
          "light": "res/icon.svg",
          "dark": "res/icon.svg"
        }
      },
      {
        "command": "shikiMarkdownPreview.openPreviewFull",
        "title": "Open Markdown Preview Full",
        "category": "Shiki Markdown Preview",
        "icon": {
          "light": "res/icon.svg",
          "dark": "res/icon.svg"
        }
      },
      {
        "command": "shikiMarkdownPreview.selectTheme",
        "title": "Select Theme",
        "category": "Shiki Markdown Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .md",
          "command": "shikiMarkdownPreview.openPreviewSlide",
          "group": "navigation",
          "alt": "shikiMarkdownPreview.openPreviewFull"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .md",
          "command": "shikiMarkdownPreview.openPreviewSlide",
          "group": "markdown"
        },
        {
          "when": "resourceExtname == .md",
          "command": "shikiMarkdownPreview.openPreviewFull",
          "group": "markdown"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .md",
          "command": "shikiMarkdownPreview.openPreviewSlide",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "shikiMarkdownPreview.openPreviewSlide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && resourceExtname == .md"
      },
      {
        "command": "shikiMarkdownPreview.openPreviewFull",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorTextFocus && resourceExtname == .md"
      },
      {
        "command": "shikiMarkdownPreview.selectTheme",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "resourceExtname == .md"
      }
    ],
    "configuration": {
      "title": "Shiki Markdown Preview",
      "properties": {
        "shikiMarkdownPreview.currentTheme": {
          "type": "string",
          "default": "vitesse-dark",
          "description": "Current theme for the markdown preview.",
          "enum": [
            "catppuccin-latte",
            "everforest-light",
            "github-light",
            "github-light-default",
            "github-light-high-contrast",
            "gruvbox-light-hard",
            "gruvbox-light-medium",
            "gruvbox-light-soft",
            "kanagawa-lotus",
            "light-plus",
            "material-theme-lighter",
            "min-light",
            "one-light",
            "rose-pine-dawn",
            "slack-ochin",
            "snazzy-light",
            "solarized-light",
            "vitesse-light",
            "andromeeda",
            "aurora-x",
            "ayu-dark",
            "catppuccin-frappe",
            "catppuccin-macchiato",
            "catppuccin-mocha",
            "dark-plus",
            "dracula",
            "dracula-soft",
            "everforest-dark",
            "github-dark",
            "github-dark-default",
            "github-dark-dimmed",
            "github-dark-high-contrast",
            "gruvbox-dark-hard",
            "gruvbox-dark-medium",
            "gruvbox-dark-soft",
            "houston",
            "kanagawa-dragon",
            "kanagawa-wave",
            "laserwave",
            "material-theme",
            "material-theme-darker",
            "material-theme-ocean",
            "material-theme-palenight",
            "min-dark",
            "monokai",
            "night-owl",
            "nord",
            "one-dark-pro",
            "plastic",
            "poimandres",
            "red",
            "rose-pine",
            "rose-pine-moon",
            "slack-dark",
            "solarized-dark",
            "synthwave-84",
            "tokyo-night",
            "vesper",
            "vitesse-black",
            "vitesse-dark"
          ]
        },
        "shikiMarkdownPreview.documentWidth": {
          "type": "string",
          "default": "800px",
          "description": "文档宽度，支持所有CSS宽度值（如 800px, 100%, 60rem, 1200px 等）",
          "pattern": "^[0-9]+(px|em|rem|%|vw|ch|ex|cm|mm|in|pt|pc)$",
          "patternErrorMessage": "请输入有效的CSS宽度值，如：800px, 100%, 60rem, 1200px 等"
        },
        "shikiMarkdownPreview.fontFamily": {
          "type": "string",
          "default": "inherit",
          "description": "预览字体设置，留空或输入 inherit 将继承 VSCode 编辑器字体，也可以指定具体电脑已安装字体如：'Microsoft YaHei', 'Courier New', Consolas"
        },
        "shikiMarkdownPreview.enableScrollSync": {
          "type": "boolean",
          "default": true,
          "description": "启用预览区与编辑区的同步滚动功能。当启用时，滚动编辑器或预览区时，另一个区域会自动同步滚动到对应位置。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./",
    "copy-assets": "cp -r src/webview/*.css src/webview/*.js out/webview/ 2>/dev/null || true",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "watch": "tsc -w -p ./",
    "ext:package": "vsce package"
  },
  "dependencies": {
    "@mdit/plugin-container": "^0.22.1",
    "@mdit/plugin-katex": "^0.23.1",
    "@shikijs/transformers": "^3.12.2",
    "@types/markdown-it": "^14.1.2",
    "chroma-js": "^3.1.2",
    "consola": "^3.4.2",
    "gray-matter": "^4.0.3",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-image-lazy-loading": "^2.0.1",
    "markdown-it-table-of-contents": "^1.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "nanoid": "^5.1.5",
    "shiki": "^3.12.2",
    "throttle-debounce": "^5.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@types/chroma-js": "^3.1.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22",
    "@types/throttle-debounce": "^5.0.2",
    "@types/vscode": "^1.100.0",
    "@types/vscode-webview": "^1.57.0",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^1.0.1",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  }
}
