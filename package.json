{
	"name": "shiki-markdown-preview",
	"description": "Cat Coding - A Webview API Sample",
	"version": "0.0.1",
	"publisher": "fxzer",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"icon": "res/icon.png",
	"contributes": {
		"commands": [
			{
				"command": "shiki-markdown-preview.show",
				"title": "Open Preview",
				"category": "Shiki Markdown Preview",
				"icon": {
					"light": "res/icon.svg",
					"dark": "res/icon.svg"
				}
			},
			{
				"command": "shiki-markdown-preview.showForDocument",
				"title": "Open Preview to the Side",
				"category": "Shiki Markdown Preview"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceExtname == .md",
					"command": "shiki-markdown-preview.show",
					"group": "navigation",
					"alt": "shiki-markdown-preview.showForDocument"
				}
			],
			"editor/context": [
				{
					"when": "resourceExtname == .md",
					"command": "shiki-markdown-preview.show",
					"group": "markdown"
				},
				{
					"when": "resourceExtname == .md",
					"command": "shiki-markdown-preview.showForDocument",
					"group": "markdown"
				}
			],
			"explorer/context": [
				{
					"when": "resourceExtname == .md",
					"command": "shiki-markdown-preview.showForDocument",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "shiki-markdown-preview.show",
				"key": "ctrl+shift+v",
				"mac": "cmd+shift+v",
				"when": "editorTextFocus && resourceExtname == .md"
			},
			{
				"command": "shiki-markdown-preview.showForDocument",
				"key": "ctrl+k v",
				"mac": "cmd+k v",
				"when": "editorTextFocus && resourceExtname == .md"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -w -p ./",
		"ext:package": "vsce package"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/vscode": "^1.100.0",
		"@types/vscode-webview": "^1.57.0",
		"eslint": "^9.13.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0",
		"vsce": "^2.15.0"
	},
	"dependencies": {
		"@types/markdown-it": "^14.1.2",
		"markdown-it": "^14.1.0",
		"markdown-it-anchor": "^9.2.0",
		"markdown-it-emoji": "^3.0.0",
		"markdown-it-table-of-contents": "^1.0.0",
		"markdown-it-task-lists": "^2.1.1",
		"shiki": "^3.12.2"
	}
}
