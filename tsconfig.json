{
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "ES2024",
      "WebWorker"
    ],
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "shiki-markdown-preview-0.0.1",
    "out"
  ]
}
